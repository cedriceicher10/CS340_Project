	</head>
	<body>
	<!--Title-->
	<div id="title">
		<img id="futbol" src="images/futbol.PNG" alt="futbol">
		<h1 id="mainTitle"><b>UPDATE<b></h1>
		<img id="futbol" src="images/futbol.PNG" alt="futbol">
	</div>
	<br>
	
	<!--Update-->
	<div id="update">
		<br>
			<form>
				<fieldset id="update">
					<legend><strong>UPDATE the following attribute:</strong></legend>
					<span>Table:</span>
					<select id="tableSelect">
						<option value="Team">Team</option>
						<option value="Stadium">Stadium</option>
						<option value="League">League</option>
						<option value="Player">Player</option>
						<option value="Sponsor">Sponsor</option>
					</select>
					<span>Attribute:</span>
					<select id="attributeSelect">
						<option value="Name">Name</option>
						<option value="City">City</option>
						<option value="Capacity">Capacity</option>
						<option value="Pitch">Pitch</option>
						<option value="Year">Year</option>
						<option value="Location">Location</option>
						<option value="Stadium">Stadium</option>
						<option value="Standing">Standing</option>
						<option value="Appearances">Appearances</option>
						<option value="Points">Points</option>
						<option value="Champion">Champion</option>
						<option value="TotalGames">TotalGames</option>
						<option value="FirstName">First Name</option>
						<option value="LastName">Last Name</option>
						<option value="Position">Position</option>
						<option value="Goals">Goals</option>
						<option value="Assists">Assists</option>
						<option value="Height">Height</option>
						<option value="BirthDate">BirthDate</option>
						<option value="Nationality">Nationality</option>
						<option value="Sponsor">Sponsor</option>
						<option value="Revenue">Revenue</option>
					</select>
					<button id="updateButton" class="submit"><strong>Update Database</strong></button>
					<br></br>
				</fieldset>
			</form>
		</br>
	</div>
	
	<!--Showing Table-->
	<table>
		<thead> 
			<th>Name</th> 
			<th>Revenue</th> 
		</thead> 
		<tbody> 
			{{#each sponsor}} 
			<tr> 
				<td>{{name}}</td> 
				<td>{{revenue}}</td>
			</tr> 
			{{/each}}
		</tbody>
	</table> 
	
