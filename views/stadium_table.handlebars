	<body>
	<!--Title-->
	<div id="title">
		<img id="futbol" src="images/futbol.PNG" alt="futbol">
		<h1 id="mainTitle"><b>STADIUM<b></h1>
		<img id="futbol" src="images/futbol.PNG" alt="futbol">
	</div>
	<br>
	
	<!--Showing Tables-->	
	<!--Stadium-->
	<br></br><br></br>
	</br>
	<span id="tableTitle">STADIUM TABLE</span>
	<table>
		<thead> 
			<th>StadiumId</th>
			<th>Name</th> 
			<th>City</th>
			<th>Capacity</th> 
			<th>Pitch</th> 
			<th>Year</th>
			<th>Delete</th>
			<th>Edit</th>
		</thead> 
		<tbody> 
			{{#each stadium}} 
			<tr> 
				<td>{{stadiumId}}</td>
				<td>{{name}}</td> 
				<td>{{city}}</td>
				<td>{{capacity}}</td>
				<td>{{pitch}}</td>
				<td>{{year}}</td>
				<td><button onclick="deletePerson({{stadiumId}})">Delete</button></td> <!--Taken directly from Justin's code. Needs tieing to actual JS action-->
				<td><a href="/stadium/{{stadiumId}}">Update</a></td> <!--Taken directly from Justin's code. Needs tieing to actual JS action-->
			</tr> 
			{{/each}}
		</tbody>
	</table>
	
